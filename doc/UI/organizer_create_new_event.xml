<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEECDE">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="100sp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editEventPoster"
        android:layout_width="214dp"
        android:layout_height="59dp"
        android:gravity="center"
        android:text="Add Event Details"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"/>


    <EditText
        android:id="@+id/editLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Location:____________"
        android:inputType="text"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="343dp" />

    <EditText
        android:id="@+id/editDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Day:__________"
        android:inputType="date"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="409dp" />

    <EditText
        android:id="@+id/editTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Time:___________"
        android:inputType="time"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="475dp" />

    <EditText
        android:id="@+id/editLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Attendee Limit:______________"
        android:inputType="number"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="544dp" />

    <Button
        android:id="@+id/button_upload_event_poster"
        android:layout_width="288dp"
        android:layout_height="120dp"
        android:background="@color/green"
        android:gravity="center"
        android:padding="16dp"
        android:text="Upload Event Poster"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.291" />

    <Button
        android:id="@+id/eventDetailsButton"
        android:layout_width="250sp"
        android:layout_height="70sp"
        android:layout_marginTop="464dp"
        android:backgroundTint="#9A8FBF"
        android:text="Create new events"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEventPoster" />

</androidx.constraintlayout.widget.ConstraintLayout>