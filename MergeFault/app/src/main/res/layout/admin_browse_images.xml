<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEECDE">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="100sp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/eventPostersButton"
        android:layout_width="120sp"
        android:layout_height="70sp"
        android:backgroundTint="#9A8FBF"
        android:text="Event Posters"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/imageListView"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/pfpButton"
        android:layout_width="120sp"
        android:layout_height="70sp"
        android:backgroundTint="#9A8FBF"
        android:text="Profile Pictures"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/imageListView"
        app:layout_constraintEnd_toStartOf="@+id/bothButton"
        app:layout_constraintStart_toEndOf="@+id/eventPostersButton" />

    <Button
        android:id="@+id/bothButton"
        android:layout_width="120sp"
        android:layout_height="70sp"
        android:backgroundTint="#9A8FBF"
        android:text="Both"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/imageListView"
        app:layout_constraintEnd_toEndOf="parent" />



    <TextView
        android:id="@+id/postedEventsText"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Posted Events"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">
    </TextView>

    <ListView
        android:id="@+id/imageListView"
        android:layout_width="409dp"
        android:layout_height="475dp"
        android:layout_marginBottom="39dp"
        android:orientation="horizontal"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </ListView>



    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:text="Cancel"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageListView" />

</androidx.constraintlayout.widget.ConstraintLayout>